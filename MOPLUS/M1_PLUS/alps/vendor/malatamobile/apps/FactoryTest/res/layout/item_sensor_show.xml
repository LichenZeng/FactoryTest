            android:layout_below="@+id/tv_pssor_name"
            android:layout_marginTop="3dp"
            style="@style/textTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
